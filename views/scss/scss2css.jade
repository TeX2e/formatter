extends ../layout

block prepend stylesheets
  link(rel="stylesheet", href="/CodeMirror/lib/codemirror.css")

block append scripts
  script(src="/CodeMirror/lib/codemirror.js")
  script(src="/CodeMirror/addon/edit/closebrackets.js")
  script(src="/CodeMirror/mode/sass/sass.js")
  script(src="/CodeMirror/mode/css/css.js")
  script.
    window.editorFromOption = { mode: 'sass' };
    window.editorToOption   = { mode: 'css' };
  script(src="/javascripts/convert/process.js")

block content
  h1= title
  
  - var convertFrom = 'SCSS'
  - var convertTo   = 'CSS'
  include ../layout-convert.jade
