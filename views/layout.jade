doctype html
html
  head
    meta(charset="utf-8")
    title= title
    meta(http-equiv="cleartype" content="on")
    meta(name="MobileOptimized" content="320")
    meta(name="HandheldFriendly" content="True")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    
    block stylesheets
      link(rel='stylesheet', href='/stylesheets/style.css')
    
    block scripts
      script(src="/javascripts/lib/jquery-2.2.1.min.js")
      script(src="/javascripts/lib/slideout.min.js")
      script(src="/javascripts/slideout.js")
      
  body
    nav#menu
      header
        h2 Menu
        p Docs, Installation, Usage, API
        section(class="menu-section")
          h3(class="menu-section-title") JSON
          ul(class="menu-section-list")
            li: a(href="/convert/json2yaml" target="_blank") convert json → yaml
            li: a(href="/convert/json2cson" target="_blank") convert json → cson
            li: a(href="/convert/yaml2json" target="_blank") convert yaml → json
            li: a(href="/convert/cson2json" target="_blank") convert cson → json

    main#panel
      header
        span(class="slideout-menu-toggle-button") ☰
        
      block content
